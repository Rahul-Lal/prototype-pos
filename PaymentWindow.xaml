<Window x:Class="Prototype.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prototype"
        mc:Ignorable="d"
        Title="Payment" Height="450" Width="800">
    <Grid>
        <Label Content="Total" FontSize="48" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="173,22,0,0" VerticalAlignment="Top" Width="228" FontWeight="Bold" Height="69" RenderTransformOrigin="0.486,0.166"/>
        <TextBox x:Name="txtTotalPrice" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Margin="401,19,0,0" TextWrapping="Wrap" Text="$0.00" VerticalAlignment="Top" Width="228" Height="72" IsReadOnly="True" FontSize="48" TextAlignment="Center"/>

        <Button x:Name="btnEftpos" Click="btnEftpos_Click" Content="EFTPOS" HorizontalAlignment="Left" Margin="58,106,0,0" VerticalAlignment="Top" Height="88" Width="169" FontSize="24" Foreground="White" Background="#FF3406B9"/>
        <Button x:Name="btnExactAmount" Click="btnExactAmount_Click" Content="Exact" HorizontalAlignment="Left" Margin="58,202,0,0" VerticalAlignment="Top" Height="88" Width="169" FontSize="24" Background="#FF585858" Foreground="White"/>
        <Button x:Name="btnCash" Click="btnCash_Click" Content="Cash" HorizontalAlignment="Left" Margin="554,320,0,0" VerticalAlignment="Top" Height="88" Width="170" FontSize="24" Background="#FF0ACA39" Foreground="White"/>
        <Button x:Name="btnHundredDollars" Click="btnHundredDollars_Click" HorizontalAlignment="Left" Margin="406,109,0,0" VerticalAlignment="Top" Height="88" Width="169">
            <Button.Background>
                <ImageBrush ImageSource="/media/Money/One Hundred.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnFiftyDollars" Click="btnFiftyDollars_Click" HorizontalAlignment="Left" Margin="232,109,0,0" VerticalAlignment="Top" Height="88" Width="169">
            <Button.Background>
                <ImageBrush ImageSource="/media/Money/Fifty.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnTwentyDollars" Click="btnTwentyDollars_Click" HorizontalAlignment="Left" Margin="406,202,0,0" VerticalAlignment="Top" Height="88" Width="169">
            <Button.Background>
                <ImageBrush ImageSource="/media/Money/Twenty.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnTenDollars" Click="btnTenDollars_Click" HorizontalAlignment="Left" Margin="232,202,0,0" VerticalAlignment="Top" Height="88" Width="169">
            <Button.Background>
                <ImageBrush ImageSource="/media/Money/Ten.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnFiveDollars" Click="btnFiveDollars_Click" HorizontalAlignment="Left" Margin="580,109,0,0" VerticalAlignment="Top" Height="88" Width="169">
            <Button.Background>
                <ImageBrush ImageSource="/media/Money/Five.jpg"/>
            </Button.Background>
        </Button>
        <Label Content="Pay Cash" FontSize="36" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="142,320,0,0" VerticalAlignment="Top" Width="174" FontWeight="Bold" Height="88" RenderTransformOrigin="0.486,0.166"/>
        <TextBox x:Name="txtCash" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Margin="322,320,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="228" Height="88" IsReadOnly="False" FontSize="48" TextAlignment="Center" />


    </Grid>
</Window>
