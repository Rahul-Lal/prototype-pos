<Window x:Class="Prototype.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prototype"
        mc:Ignorable="d"
        Title="Payment" Height="450" Width="800">
    <Grid>
        <Label Content="Total" FontSize="24" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,285,0,0" VerticalAlignment="Top" Width="168" FontWeight="Bold" Height="42"/>
        <TextBox x:Name="txtTotalPrice" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Margin="0,327,0,0" TextWrapping="Wrap" Text="$0.00" VerticalAlignment="Top" Width="168" Height="47" IsReadOnly="True" FontSize="24" TextAlignment="Center"/>

        <Button x:Name="btnEftpos" Content="Button" HorizontalAlignment="Left" Margin="54,63,0,0" VerticalAlignment="Top" Height="88" Width="169"/>
        <Button x:Name="btnExactAmount" Content="Button" HorizontalAlignment="Left" Margin="228,63,0,0" VerticalAlignment="Top" Height="88" Width="169"/>
        <Button x:Name="btnCash" Content="Button" HorizontalAlignment="Left" Margin="402,63,0,0" VerticalAlignment="Top" Height="88" Width="169"/>
        <Button x:Name="btnHundredDollars" Content="Button" HorizontalAlignment="Left" Margin="576,63,0,0" VerticalAlignment="Top" Height="88" Width="169"/>
        <Button x:Name="btnFiftyDollars" Content="Button" HorizontalAlignment="Left" Margin="54,156,0,0" VerticalAlignment="Top" Height="88" Width="169"/>
        <Button x:Name="btnTwentyDollars" Content="Button" HorizontalAlignment="Left" Margin="228,156,0,0" VerticalAlignment="Top" Height="88" Width="169"/>
        <Button x:Name="btnTenDollars" Content="Button" HorizontalAlignment="Left" Margin="402,156,0,0" VerticalAlignment="Top" Height="88" Width="169"/>
        <Button x:Name="btnFiveDollars" Content="Button" HorizontalAlignment="Left" Margin="576,156,0,0" VerticalAlignment="Top" Height="88" Width="169"/>


    </Grid>
</Window>
