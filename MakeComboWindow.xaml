<Window x:Class="Prototype.MakeComboWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prototype"
        mc:Ignorable="d"
        Title="Would You Like To Make The Burger A Combo?" Height="450" Width="750">
    <Grid>
        <Label Content="Would you like to make the burger a combo?" HorizontalAlignment="Center" Margin="0,118,0,0" VerticalAlignment="Top" FontSize="30" FontFamily="Agency FB" Width="541" HorizontalContentAlignment="Center"/>
        <Button x:Name="btnLargeCombo"  Content="Make A Large Combo" Click="btnLargeCombo_Click" Margin="104,212,500,139"/>
        <Button x:Name="btnMediumCombo"  Content="Make A Medium Combo" Click="btnMediumCombo_Click" Margin="303,212,302,139"/>
        <Button x:Name="btnJustTheBurger"  Content="Just The Burger" Click="btnJustTheBurger_Click" Margin="501,212,104,139"/>
        <Button x:Name="btnCancel" Content="Cancel" Click="btnCancel_Click" Margin="303,375,302,10"/>

    </Grid>
</Window>
